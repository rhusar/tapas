<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:c='urn:import:com.google.gwt.user.cellview.client' >

   <g:DockLayoutPanel unit='EM' height="100%" styleName='{style.outer}'>

      <g:north size='8'>
         <g:SimplePanel ui:field='menu' />
      </g:north>

      <g:north size='4'>
         <g:HTMLPanel>
            <h1>
               <g:Label ui:field='projectName'>TBD</g:Label>
            </h1>
         </g:HTMLPanel>
      </g:north>

      <g:center>
         <g:ScrollPanel>
            <g:HTMLPanel>
               <h2>Project Properties</h2>
               <strong>Today</strong>
               <g:Label ui:field='propToday'>TBD</g:Label>
               <strong>Start date</strong>
               <g:Label ui:field='propStart'>TBD</g:Label>
               <strong>Target date</strong>
               <g:Label ui:field='propTarget'>TBD</g:Label>
               <strong>Days remaining</strong>
               <g:Label ui:field='propDays'>TBD</g:Label>
            </g:HTMLPanel>
         </g:ScrollPanel>
      </g:center>

      <g:south size="2">
         <g:SimplePanel ui:field='status' />
      </g:south>
      
      <g:east size="40" unit="PCT">
         <g:HTMLPanel>
            <h2>Project Phases</h2>
            <c:CellTable ui:field='phases'  styleName='{style.table}' />
            <g:Anchor ui:field='phaseAdd'>Add</g:Anchor> |
            <g:Anchor ui:field='phaseRemove'>Remove</g:Anchor> |
            <g:Anchor ui:field='phaseSave'>Save</g:Anchor>
         </g:HTMLPanel>
      </g:east>
   </g:DockLayoutPanel>

   <ui:style>
  .outer {
    border-left: 1px solid #999;
    border-bottom: 1px solid #999;
    cursor: pointer;
    cursor: hand;
  }

    .table {
     width: 100%;
  }

   </ui:style>

</ui:UiBinder>
